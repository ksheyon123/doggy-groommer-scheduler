{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2023"],
    "module": "ESNext",
    "skipLibCheck": true,
    // types: 자동으로 포함할 @types 패키지를 지정
    // 빈 배열([])로 설정하면 node_modules/@types의 자동 포함을 비활성화
    // monorepo에서 다른 패키지(apps/api)의 @types/uuid가 감지되는 문제 방지
    "types": [],
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": ["vite.config.ts"]
}
